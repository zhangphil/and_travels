<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupWindowScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="分享给您的朋友吧！"
        android:textSize="12sp" />
    
     <!--  <ImageView
            android:id="@+id/quit"
            android:layout_width="10dip"
            android:layout_height="match_parent" />-->
     
   </RelativeLayout>
   
   <View
      android:id="@+id/divide"
	  android:layout_width="fill_parent"
	  android:layout_height="1dip"
	  android:layout_marginLeft="5dip"
	  android:layout_marginRight="5dip"
	  android:layout_below="@+id/title"
	  android:orientation="horizontal"
	  android:layout_marginTop="10dip"
	  android:background="#707172"/>

   <RelativeLayout
       android:id="@+id/shareImage"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/divide"
       android:layout_marginTop="26dp"
       android:background="#f4f2f2"
       android:orientation="horizontal" >

       <ImageView
           android:id="@+id/share1"
           android:layout_width="50dip"
           android:layout_height="50dip"
           android:layout_marginLeft="20dip"
           android:src="@drawable/a_selected" />

       <ImageView
           android:id="@+id/share2"
           android:layout_width="50dip"
           android:layout_height="50dip"
           android:layout_toRightOf="@+id/share1"
           android:layout_marginLeft="30dip"
           android:src="@drawable/b_selected" />

       <ImageView
           android:id="@+id/share3"
           android:layout_width="50dip"
           android:layout_height="50dip"
           android:layout_toRightOf="@+id/share2"
           android:layout_alignParentRight="true"
           android:layout_marginRight="60dip"
           android:src="@drawable/c_selected" />

       <ImageView
           android:id="@+id/share4"
           android:layout_width="50dip"
           android:layout_height="50dip"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dip"
           android:src="@drawable/d_selected" />
   </RelativeLayout>
   
</RelativeLayout>