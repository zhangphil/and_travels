<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:adjustViewBounds="true"
        android:maxHeight="20dip"
        android:maxWidth="20dip"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_centerInParent="true"
        android:background="@color/and_travels_light_blue"
        android:gravity="center"
        android:text="@string/lvyoudaolan"
        android:textColor="@android:color/white" >
    </TextView>

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" >


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
            <ImageView
                android:id="@+id/photo_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="25dip"
                android:maxWidth="25dip"
                android:src="@drawable/ic_photo_camera_white_48pt" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="25dip"
                android:maxWidth="25dip"
                android:src="@drawable/ic_more_horiz_white_2x" />
            </LinearLayout>
            
		 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />

    </ViewSwitcher>

</RelativeLayout>