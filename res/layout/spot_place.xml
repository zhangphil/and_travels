<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
          <include 
                layout="@layout/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/headFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            
          

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <chinamobile.iot.andtravels.CircleIndicatorView
                android:id="@+id/circleIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/centerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:background="#00000000"
                android:gravity="right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="20dip"
                        android:maxHeight="20dip"
                        android:adjustViewBounds="true"
                        android:src="@drawable/collect" />

                        <TextView
                            android:id="@+id/textView_Collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="收藏"
                            android:textSize="8sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="20dip"
                        android:maxHeight="20dip"
                        android:adjustViewBounds="true"
                        android:src="@drawable/favorite" />

                        <TextView
                            android:id="@+id/textView_Favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="点赞"
                            android:textSize="8sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="20dip"
                        android:maxHeight="20dip"
                        android:adjustViewBounds="true"
                        android:src="@drawable/comment" />

                        <TextView
                            android:id="@+id/textView_Comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="评论"
                            android:textSize="8sp" />
                  
                </LinearLayout>
            </LinearLayout>

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/daoyouFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginRight="5dip" >

        <ImageView
            android:id="@+id/daoyouImageView"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:src="@drawable/spot" />
    </FrameLayout>

    <!--  
    
    <ImageView
        android:id="@+id/back_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="30dip"
        android:maxWidth="30dip"
        android:padding="3dip"
        android:src="@drawable/back" />
        
        -->

</FrameLayout>